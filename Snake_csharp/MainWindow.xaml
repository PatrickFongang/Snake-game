<Window x:Class="Snake_csharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake_csharp"
        mc:Ignorable="d"
        Title="Snake" Height="500" Width="800"
        MinHeight="300" MinWidth="300"
        Background="{StaticResource BackgroundColor}"
        Foreground="{StaticResource TextColor}"
        FontFamily="{StaticResource MainFont}"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/icon.ico"
        PreviewKeyDown="Window_PreviewKeyDown"
        KeyDown="Window_KeyDown">

    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="ScoreText"
               FontSize="22"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Text="Score: 0|High Score: 0"
               Margin="10"/>

            <Border x:Name="GridBorder"
            Grid.Row="1"
            BorderBrush="{StaticResource GridLineColor}"
            BorderThickness="1.5"
            HorizontalAlignment="Center"   
            VerticalAlignment="Center"
            RenderOptions.EdgeMode="Aliased"
            Margin="20,20,20,20">
                <UniformGrid x:Name="GameGrid"
                     Background="{StaticResource GridBackgroundColor}"
                     Width="400"
                     Height="400"
                     SnapsToDevicePixels="True"
                     RenderOptions.BitmapScalingMode="HighQuality">

                </UniformGrid>
            </Border>

            <Border x:Name="Overlay"
        Grid.Row="1"
        Background="{StaticResource OverlayColor}"
        Width="{Binding Path=ActualWidth, ElementName=GridBorder}"
        Height="{Binding Path=ActualHeight, ElementName=GridBorder}"
        RenderOptions.EdgeMode="Aliased">

                <Grid>
                    <!-- Menu -->
                    <StackPanel x:Name="MenuPanel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Visible">

                        <TextBlock Text="Chose Mode"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                        <ListBox x:Name="ModeList"
                             Width="200"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="White"
                             FontSize="20"
                             HorizontalAlignment="Center"
                             SelectionChanged="ModeList_SelectionChanged"
                             KeyDown="ModeList_KeyDown">

                            <ListBoxItem Content="Classic" Tag="0"/>
                            <ListBoxItem Content="Through Walls" Tag="1"/>
                            <ListBoxItem Content="Immortal" Tag="2"/>
                            <ListBoxItem Content="Head Is Tail" Tag="3"/>
                            <ListBoxItem Content="Portal" Tag="4"/>
                            <ListBoxItem Content="Poison" Tag="5"/>
                            <ListBoxItem Content="TwoSnakes" Tag="6"/>
                        </ListBox>
                    </StackPanel>

                    <!-- Press any -->
                    <TextBlock x:Name="OverlayText"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="PRESS ANY KEY TO START"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>
                   <StackPanel x:Name="GameOverPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
                        <TextBlock x:Name="GameOverText"
                                  Text="GAME OVER"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextColor}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
                        <Button Content="Restart Game"
                    Width="160" Height="40"
                    Margin="0,0,0,10"
                    Click="RestartSameMode"/>
                        <Button Content="Change Mode"
                    Width="160" Height="40"
                    Click="ReturnToMenu"/>
                    </StackPanel>
                </Grid>
            </Border>



        </Grid>
    </Viewbox>
</Window>
